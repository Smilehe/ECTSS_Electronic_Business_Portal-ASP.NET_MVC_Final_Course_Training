@model IEnumerable<Shop.Models.CategoryI>
@{
    ViewBag.Title = "Create";
}
<link href="~/Content/FH/button.min.css" rel="stylesheet" />
<link href="~/Content/TJ/buttons.css" rel="stylesheet" />
<link href="~/Content/SR/set2.css" rel="stylesheet" />
<link href="~/Content/XL/xl.css" rel="stylesheet" />
<script src="~/Scripts/TJ/classie.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
@using (Ajax.BeginForm("CreateAdd", new { id = 1, type = 1 }, new AjaxOptions() { HttpMethod = "Post", UpdateTargetId = "result" }, new { id = "from" }))
{
    <div class="form-horizontal" style="margin-top:60px;">
        <div style="width:50%;">
            <div class="form-group" style="margin-left:10%;">
                <div class="col-md-10" style="width:54%;">
                    <span class="input input--manami">
                        <input name="CategoryI" class="input__field input__field--manami" type="text" id="input-32" autocomplete="off" />
                        <label class="input__label input__label--manami" for="input-32">
                            <span class="input__label-content input__label-content--manami">类别I</span>
                        </label>
                    </span>
                </div>
                <br />
            </div>
        </div>
        
        <div style="width:49%; float:right; margin-top:-90px;">
            <label class="col-sm-2 control-label" style="font-size:16px; color:#696969; margin-left:6%;">类别I</label>
            <div class="form-group" style="margin-left:10%; margin-bottom:50px;">
                <div class="col-md-10" style="width:45.5%;">
                    <select name="XZCategoryI" style="width:80%;">
                        @foreach(var item in Model)
                        {
                            <option>@item.Category</option>                            
                        }
                    </select>
                </div>
            </div>
            <div class="form-group" style="margin-left:10%;">
                <div class="col-md-10" style="width:54%;">
                    <span class="input input--manami">
                        <input name="CategoryII" class="input__field input__field--manami" type="text" id="input-32" autocomplete="off" />
                        <label class="input__label input__label--manami" for="input-32">
                            <span class="input__label-content input__label-content--manami">类别II</span>
                        </label>
                    </span>
                </div>                
            </div>
        </div>
        

        <script>
            (function () {
                if (!String.prototype.trim) {
                    (function () {                        
                        var rtrim = /^[\s\uFEFF\xA0]+|[\s\uFEFF\xA0]+$/g;
                        String.prototype.trim = function () {
                            return this.replace(rtrim, '');
                        };
                    })();
                }

                [].slice.call(document.querySelectorAll('input.input__field')).forEach(function (inputEl) {
                    // in case the input is already filled..
                    if (inputEl.value.trim() !== '') {
                        classie.add(inputEl.parentNode, 'input--filled');
                    }

                    // events:
                    inputEl.addEventListener('focus', onInputFocus);
                    inputEl.addEventListener('blur', onInputBlur);
                });

                function onInputFocus(ev) {
                    classie.add(ev.target.parentNode, 'input--filled');
                }

                function onInputBlur(ev) {
                    if (ev.target.value.trim() === '') {
                        classie.remove(ev.target.parentNode, 'input--filled');
                    }
                }
            })();
        </script>
        <div style="width:45%; margin-left:3.5%;">
            <div class="form-group" style="margin-left:6%; margin-top:100px;">
                <div class="box bg-1">
                    <button class="button button--ujarak button--border-thin button--text-thick">确认添加</button>
                </div>
                <div style="margin-top:20px;">
                    <span id="result" style="color:red; font-size:14px;"></span>
                </div>
            </div>
        </div>
    </div>
}
<div class="svg-wrapper" style="margin-bottom:20px; float:right;">
    <svg height="40" width="150">
        <rect id="shape" height="40" width="150" />
        <div id="text">
            @Html.ActionLink("返回至商品列表", "ListOfGoods","Shop")          
        </div>
    </svg>
</div>
